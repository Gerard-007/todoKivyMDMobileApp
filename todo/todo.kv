<TodoCard>:
    elevation: 10
    md_bg_color: 1, 1, 1, 1
    radius: [8]
    size_hint_y: .2
    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {'center_x': .02, 'center_y': .5}
        md_bg_color: 1, 170/255, 23/255, 1
    MDLabel:
        text: "Task1"
        markup: True
        font_size: "20sp"
        size_hint_x: .8
        pos_hint: {'center_x': .46, 'center_y': .8}
    MDCheckbox:
        size_hint: None, None
        size: "48dp", "48dp"
        unselected_color: 1, 170/255, 23/255, 1
        selected_color: 0, 179/255, 0, 1
        pos_hint: {'center_x': .95, 'center_y': .8}
        # on_active: root.on_completed()
    MDLabel:
        id: description
        text: "Buying Fruits"
        # font_size: 
        markup: True
        size_hint_x: .9
        line_height: .8
        pos_hint: {'center_x': .51, 'center_y': .4}

